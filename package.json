{
    "name": "atomico",
    "version": "1.8.1",
    "description": "Atomico is a small library for the creation of interfaces based on web-components, only using functions and hooks.",
    "main": "core.js",
    "module": "core.js",
    "source": "core.js",
    "directories": {
        "docs": "docs"
    },
    "scripts": {
        "test": "karma start --coverage",
        "test:w": "karma start --auto-watch=true --single-run=false",
        "build:html": "rollup -c",
        "prepare": "npm run build:html && npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/atomicojs/atomico.git"
    },
    "keywords": [
        "jsx",
        "web-components",
        "hooks",
        "custom-elements",
        "webcomponent",
        "react"
    ],
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atomicojs/atomico/issues"
    },
    "homepage": "https://github.com/atomicojs/atomico#readme",
    "devDependencies": {
        "@esm-bundle/chai": "^4.1.5",
        "@open-wc/testing-karma": "^3.4.7",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "deepmerge": "^4.2.2",
        "htm": "^3.0.4",
        "karma": "^5.1.0",
        "rollup": "^2.18.0"
    },
    "files": [
        "/src",
        "!/src/tests",
        "!/src/hooks/tests",
        "/core.js",
        "/test-hooks.js",
        "/html.js",
        "/html.js.map",
        "/types.d.ts"
    ],
    "typings": "types.d.ts",
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "exports": {
        ".": "./core.js",
        "./test-hooks": "./test-hooks.js",
        "./html": "./html.js"
    },
    "dependencies": {}
}
